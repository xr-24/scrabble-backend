{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules", 
    "dist",
    "src/**/*.test.ts",
    "src/**/test-*.ts",
    "src/**/debug-*.ts",
    "src/**/*-test.ts",
    "src/**/comprehensive-*.ts",
    "src/**/integration-test.ts",
    "src/**/final-*.ts",
    "src/**/quick-*.ts"
  ]
}
